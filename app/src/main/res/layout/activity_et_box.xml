<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_et_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EtBoxFoldeer.EtBoxActivity">


    <com.aldoapps.autoformatedittext.AutoFormatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Auto formatEdit text"
        android:maxLength="20"
        android:id="@+id/autoFormatET"
        android:textColor="#64DB22"
        app:isDecimal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/autoFormatET"
        android:layout_height="match_parent">

        <io.github.angebagui.mediumtextview.MediumTextView
            android:id="@+id/medium_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>